<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dwb9000.battleplannerapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DecideTurns" />
        <activity android:name=".TurnScreen" />
        <activity android:name=".DisplayTurnAbilities" />
        <activity android:name=".Battle" />
        <activity android:name=".AttackList" />
        <activity android:name=".Battle2"></activity>
    </application>

</manifest>